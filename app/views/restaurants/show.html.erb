<p id="back"><%= link_to "Back", restaurants_url %></p>

<div class="empty-container" style="width: 100%; height: 150px"></div>

<div class="container" id="body">
  <h1><%= "#{@restaurant.name}" %></h1>
  <h2><%= link_to "Make a Reservation", new_restaurant_reservation_url( @restaurant.id )%></h2>
  <img id="rest-pic" src="http://elrestaurante.com/downloads/756/download/bitblt-640xNone-62948b14a3b4192e529d5aa419e0002a1e776b5e/LambCampechenaTacos.png?cb=706fc1b8f60098200302bfff3101eef7">
  <p id="contact-info">Contact Information:</p>
  <p><%= "#{@restaurant.address}" %></p>
  <p><%= "#{@restaurant.phone_number}" %></p>
</div>

<h4>Reviews</h4>

<p>
  Reviews for <%= @restaurant.name %>
</p>

<% @restaurant.reviews.order(:created_at).reverse.each do |review| %>
  <p>
    <%= review.comment %>

  <% if review.user != nil %>
  <em> by <%= review.user.first_name %> </em>
  Added on: <%= review.created_at %>
  <% end %>

  </p>
<% end %>

<% if current_user %>
  <h4>New Review</h4>

  <%= form_for([@restaurant, @review]) do | f | %>
    <% if @review.errors.any? %>
      <h2><%= pluralize( @review.errors.count, "error" ) %>
          prohibited this review from being saved:</h2>
      <ul>
          <% @review.errors.full_messages.each do | msg | %>
          <li>
              <% msg %>
          </li>
          <% end %>
      </ul>
    <% end %>

    <p>
        <%= f.label :comment %>
        <%= f.text_area :comment %>
    </p>
    <p>
        <%= f.submit %>
    </p>
  <% end %>

  <% else %>

  <p>
      Please
      <%= link_to "log in", new_session_path %>
      to add a review.
  </p>
<% end %>
