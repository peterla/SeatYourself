<h1><%= "#{@restaurant.name}" %></h1>

<p><%= link_to "Back", restaurants_url %>|<%= link_to "New Reservation", new_restaurant_reservation_url( @restaurant.id ) %>
<div>
  </h2><%= "#{@restaurant.name}" %></h2>
  <p>Contact Information</p>
  <p><%= "#{@restaurant.address}" %></p>
  <p><%= "#{@restaurant.phone_number}" %></p>
</div>

<h4>Reviews</h4>

<p>
  Reviews for <%= @restaurant.name %>
</p>

<% @restaurant.reviews.each do |review| %>
  <p>
    <%= review.comment %>

  <% if review.user != nil %>
  <em> by <%= review.user.first_name %> </em>
  Added on: <%= review.created_at %>
  <% end %>

  </p>
<% end %>

<% if current_user %>
  <h4>New Review</h4>

  <%= form_for([@restaurant, @review]) do | f | %>
    <% if @review.errors.any? %>
      <h2><%= pluralize( @review.errors.count, "error" ) %>
          prohibited this review from being saved:</h2>
      <ul>
          <% @review.errors.full_messages.each do | msg | %>
          <li>
              <% msg %>
          </li>
          <% end %>
      </ul>
    <% end %>

    <p>
        <%= f.label :comment %>
        <%= f.text_area :comment %>
    </p>
    <p>
        <%= f.submit %>
    </p>
  <% end %>

  <% else %>

  <p>
      Please
      <%= link_to "log in", new_session_path %>
      to add a review.
  </p>
<% end %>
