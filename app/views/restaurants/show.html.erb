<div class="restaurant-show">
<!-- 'Back' link -->
  <h2 style="padding: 50px 50px"><%= link_to "Back", restaurants_url %></h2>

  <div class="container" id="body">
    <h1><%= "#{@restaurant.name}" %></h1>

    <p id="contact-info">Contact Information:</p>
    <p id="contact-info"><%= "#{@restaurant.address}" %></p>
    <p id="contact-info"><%= "#{@restaurant.phone_number}" %></p>

    <h2><%= link_to "Make a Reservation!", new_restaurant_reservation_url( @restaurant.id )%></h2>
    <img id="rest-pic" src="http://elrestaurante.com/downloads/756/download/bitblt-640xNone-62948b14a3b4192e529d5aa419e0002a1e776b5e/LambCampechenaTacos.png?cb=706fc1b8f60098200302bfff3101eef7">
  </div>

  <div class="container" id="reviews">
  <h2>Reviews for <%= @restaurant.name %>:</h2>
  <% @restaurant.reviews.order(:created_at).reverse.each do |review| %>
    <p>
      <%= review.comment %></br>Rating: <%= review.rating %>

      <% if review.user != nil %>
      <em> </br>by <%= review.user.first_name %> </em>
    </br>Added on: <%= review.created_at %>
      <% end %>
      </p>
      <% end %>


    <% if current_user %>

    <%= form_for([@restaurant, @new_review]) do | f | %>
      <% if @new_review.errors.any? %>
        <h2><%= pluralize( @new_review.errors.count, "error" ) %>
            prohibited this review from being saved:</h2>
        <ul>
            <% @new_review.errors.full_messages.each do | msg | %>
            <li>
                <% msg %>
            </li>
            <% end %>
        </ul>
      <% end %>
      <p>
          <%= f.label :comment %>
          <%= f.text_area :comment %>

      </p>

      <p>
        <%= f.radio_button(:rating , 1) %>
        <%= f.label(:rating , "1") %>
        <%= f.radio_button(:rating , 2) %>
        <%= f.label(:rating , "2") %>
        <%= f.radio_button(:rating , 3) %>
        <%= f.label(:rating ,"3") %>
        <%= f.radio_button(:rating , 4) %>
        <%= f.label(:rating, "4") %>
        <%= f.radio_button(:rating, 5) %>
        <%= f.label(:rating, "5" ) %>
      </p>

      <p>
          <%= f.submit %>
      </p>
    <% end %>
    <% else %>
    <p>
        Please
        <%= link_to "log in", new_session_path %>
        to add a review.
    </p>
  <% end %>
</div>
