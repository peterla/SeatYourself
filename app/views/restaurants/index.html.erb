<!-- Navigation Bar: -->

<nav>
  <div class="container" id="title"><h1>Seat<i>Yourself</i></h1></div>
  <div class="container" id="nav-links">
    <ul>
      <li><a href="/restaurants">Home</a></li>
      <li class="userinfo">
        <% if current_user %>
          Signed in as <%= current_user.email %> |  <%= link_to "Log out", session_path("current"), :method => :delete %>
        <% else %>
          <%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
        <% end %></li>

      <li id="my-profile">
        <% if current_user %>
          <%= link_to "My Profile", user_path(:id) %>
        <% end %>
      </li>
    </ul>
</nav>

<!-- Main Body Content: -->

<div class="container">
  <div class="content">
  <table>
  <colgroup>
    <col width="30%">
    <col width="40%">
    <col width="30%">
  </colgroup>
  <% @restaurants.each do |restaurant| %>
      <tr>
      <td id="rest-image"> <a href="restaurants/<%=restaurant.id%>"><img src="http://placekitten.com/350/350" style="padding-bottom: 10px"></a> </td>
      <td> <a href="restaurants/<%=restaurant.id%>"><h2 id="rest-name"><%= "#{restaurant.name}" %></h2></a></td>
      <td><h2 id="rest-contact"><%= "#{restaurant.address}" %></br></br><%= "#{restaurant.phone_number}" %></h2></td>
   </tr>
   <% end %>
  </table>
  </div>
</div>
