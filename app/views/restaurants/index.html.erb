<!-- Navigation Bar: -->

<nav class="navbar navbar-inverse" role="navigation">

    <div class="navbar-header">
      <a class="navbar-brand" href="#">SeatYourself</a>
    </div>
  <div>

    <ul class="nav navbar-nav navbar-right">
      <li><a href="/restaurants">Home</a></li>
        <% if current_user %>
        <li><a href="">Signed in as <%= current_user.email %></a></li>
        <li><a href="">|</a></li>
        <li><%= link_to "Log out", session_path("current"), :method => :delete %></li>
        <% else %>
          <li><%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %></li>
        <% end %>

      <li>
        <% if current_user %>
          <%= link_to "My Profile", user_path(:id) %>
        <% end %>
      </li>
    </ul>
</div>
</nav>

<!-- Main Body Content: -->

<div class="container">
  <div class="jumbotron">
    </div>
  <div class="content">
  <table class="table-hover">
  <colgroup>
    <col width="30%">
    <col width="40%">
    <col width="30%">
  </colgroup>
  <% @restaurants.each do |restaurant| %>
      <tr>
      <td id="rest-image"> <a href="restaurants/<%=restaurant.id%>"><img src="http://placekitten.com/350/350" style="padding-bottom: 10px"></a> </td>
      <td> <a href="restaurants/<%=restaurant.id%>"><h2 id="rest-name"><%= "#{restaurant.name}" %></h2></a></td>
      <td><h2 id="rest-contact"><%= "#{restaurant.address}" %></br></br><%= "#{restaurant.phone_number}" %></h2></td>
   </tr>
   <% end %>
  </table>
  </div>

</div>
